input {
  file {
    path => "/var/log/rabbitmq/**"
    type => "rabbitmq"
  }
}

filter {
 multiline {
    type => "rabbitmq"
    pattern => "[^\s\\]"
    what => "previous"
 }
 if [type] == "rabbitmq" {
    if [path] =~ "log" {
      mutate { replace => { type => "rabbitmq_log" } }
    } else if [path] =~ "_err" {
      mutate { replace => { type => "rabbitmq_err" } }
    } else {
      mutate { replace => { type => "rabbitmq_other" } }
    }
  }
}
